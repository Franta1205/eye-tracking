<aside class="fixed left-0 top-16 h-[calc(100vh-4rem)] w-64 bg-white border-r border-gray-100 overflow-y-auto">
  <div class="p-4">
    <!-- Section header -->
    <div class="mb-6">
      <h3 class="text-xs font-semibold text-gray-500 uppercase tracking-wider mb-4">Analyses</h3>
      
      <!-- New analysis button -->
      <%= link_to new_analysis_path,
          class: "flex items-center justify-center w-full px-4 py-3 rounded-lg text-sm font-medium text-white bg-gray-900 hover:bg-gray-800 transition-colors mb-4" do %>
        <svg class="mr-2 h-4 w-4" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
        </svg>
        New Analysis
      <% end %>
    </div>

    <!-- Analyses list -->
    <nav class="space-y-1">
      <% %w[Analysis\ 1 Analysis\ 2 Analysis\ 3 Analysis\ 4 Analysis\ 5].each_with_index do |analysis_name, index| %>
        <%= link_to "#",
            class: "group flex items-center px-3 py-2 text-sm font-medium rounded-lg hover:bg-gray-50 transition-colors #{'bg-gray-50 text-gray-900' if index == 0}" do %>
          <svg class="mr-3 h-5 w-5 text-gray-400 group-hover:text-gray-600" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
          </svg>
          <span class="<%= index == 0 ? 'text-gray-900' : 'text-gray-700' %>"><%= analysis_name %></span>
          <span class="ml-auto text-xs text-gray-500">2d ago</span>
        <% end %>
      <% end %>
    </nav>
  </div>
</aside>